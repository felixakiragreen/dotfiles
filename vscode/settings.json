{
	"workbench.iconTheme": "Monokai Pro (Filter Spectrum) Icons",
	"workbench.fontAliasing": "default",
	"workbench.editor.scrollToSwitchTabs": true,
	"workbench.settings.useSplitJSON": true,
	"workbench.editor.empty.hint": "hidden",
	"workbench.colorTheme": "Monokai Pro (Filter Spectrum)",

	"editor.fontFamily": "'Iosevka Felix', 'Zed Mono', Jetbrains Mono, Fira Code, IBM Plex Mono, Operator Mono",
	"editor.fontSize": 15,
	"editor.fontLigatures": true,
	"editor.tabSize": 3,
	"editor.letterSpacing": 1.0,
	"editor.lineHeight": 1.618,
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.suggestSelection": "first",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.smoothScrolling": true,
	"editor.wordWrap": "on",
	"editor.bracketPairColorization.enabled": true,
	"editor.guides.bracketPairs": true,
	"editor.formatOnSave": true,
	"editor.inlineSuggest.enabled": true,
	"editor.indentSize": "tabSize",
	"editor.insertSpaces": false,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.accessibilitySupport": "off",

	"terminal.integrated.fontSize": 16,
	"security.workspace.trust.untrustedFiles": "open",
	"search.smartCase": true,
	"search.exclude": {
		"/node_modules": true
	},
	"files.watcherExclude": {
		"/node_modules/": true
	},
	"files.associations": {
		"*.svx": "markdown",
		"*.postcss": "scss",
		"*.svg": "html"
	},
	"files.exclude": {
		"**/.git": false
	},
	"color-highlight.markerType": "underline",
	"color-highlight.matchWords": true,
	"extensions.ignoreRecommendations": false,
	"diffEditor.ignoreTrimWhitespace": false,

	"git.autofetch": true,
	"git.suggestSmartCommit": false,
	"gitlens.currentLine.enabled": false,
	"gitlens.codeLens.authors.command": false,
	"gitlens.codeLens.recentChange.command": false,
	"gitlens.codeLens.enabled": false,
	"gitlens.currentLine.scrollable": false,
	"githubPullRequests.pullBranch": "never",

	"prettier.semi": false,
	"prettier.singleQuote": true,
	"prettier.tabWidth": 3,
	"prettier.trailingComma": "all",
	"prettier.useTabs": true,
	// "prettier.documentSelectors": ["**/*.astro"],

	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"markdown.preview.breaks": true,
	"svelte.enable-ts-plugin": true,
	"astroAllowShorthand": true,
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"[astro]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	},
	"[solidity]": {
		"editor.defaultFormatter": "NomicFoundation.hardhat-solidity"
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[svg]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[rust]": {
		"editor.inlayHints.enabled": "offUnlessPressed"
	},
	"[mdx]": {
		"editor.formatOnSave": false
	},
	"[java]": {
		"editor.formatOnSave": false
	}
}
